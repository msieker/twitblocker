{
  "manifest_version": 2,

  "name": "Twitblocker",
  "description": "Blocks various twits with reason",
  "version": "1.0",
    "content_scripts":[
        {
            "matches":["https://twitter.com/"],
            "css":["featherlight.min.css"],
            "js": ["jquery.js","featherlight.min.js","inpage.js"]
        }
    ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://twitter.com/"
  ]
}